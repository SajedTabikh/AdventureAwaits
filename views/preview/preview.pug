  section#section-tours.section-tours
    .u-center-text.u-margin-bottom-big
      h2.heading-secondary
        | Most popular tours
    main.main
      .card-container
        each tour in tours
          .card
            .card__header
              .card__picture
                .card__picture-overlay &nbsp;
                img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
              h3.heading-tertirary
                span= tour.name

            .card__details
              h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
              p.card__text= tour.summary
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-map-pin')
                span(class="cardTours")= tour.startLocation.description
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-calendar')
                span(class="cardTours")= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-flag')
                span(class="cardTours")= `${tour.locations.length} stops`
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-user')
                span(class="cardTours")= `${tour.maxGroupSize} people`

            .card__footer
              p
                span.card__footer-value(class="cardTours")= `${tour.price}$`
                | 
                span.card__footer-text per person
              p.card__ratings
                span.card__footer-value(class="cardTours")= tour.ratingsAverage
                | 
                span.card__footer-text= `rating (${tour.ratingsQuantity})`
              a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details
        
    .u-center-text.u-margin-top-huge
      a.btn.btn--green(href="/All-Tours") Discover all tours
