header.header
  nav.nav.nav--tours
    a.nav__el(href='/All-Tours' style="font-weight: bold; color: white;") All tours
  .header__logo
    a(href="/" aria-label="Home")
      img(src='/images/logo.svg' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span(style="font-weight: bold; color: white;")= user.name.split(' ')[0]
      a.nav__el.nav__el--logout(style="font-weight: bold; color: white;") Log out
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up