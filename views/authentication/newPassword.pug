    link(href="https://fonts.googleapis.com/css2?family=Poppins&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/css/forgotPassword.css")
    link(rel="stylesheet", href="/css/tourStyle.css")
    script(src="https://js.stripe.com/v3/") 
    title Reset Password
  body
    .card
      h2 Reset Password
      p You can reset your password here
      form.form--resetPasword
        input#resetPassword.passInput.rest--form(type="password", name="password", placeholder="New Password", required, minlength='8')
        input#resetPasswordConfirm.passInput.rest--form(type="password", name="password", placeholder="New Password Confirmation", required, minlength='8')
        button.btn Change Password
    script(src="/js/bundle.js")
